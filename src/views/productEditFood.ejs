</div>


<div class="container">

  <div class="row card-deck mb-3 text-center">
    <% productos.forEach(function (unProducto) { %>
    <div class="col-sm-3 card mb-4 box-shadow">
      <div class="card-header">
        <h4 class="my-0 font-weight-normal"><%= unProducto.nombre_producto %></h4>
      </div>
      <div class="card-body">
      
        <h1 class="card-title pricing-card-title"><%= unProducto.precio_producto %> <small class="text-muted"></small></h1>
        <ul class="list-unstyled mt-3 mb-4 listaprod">
          <li><%= unProducto.descipcion_producto %></li>
          <li><img   src="../../images/Comida/CJCaimi_dashidachica.jpg" alt="Combini"></li>
           

        </ul>
        
        

        <form action="/borrar/<%= unProducto.id %>?_method=DELETE" method="POST">
					<button>BORRAR</button>
				</form>
        
      </div>
    </div>
    <% }) %>
  </div>
  
</div>


