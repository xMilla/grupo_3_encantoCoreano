<%- include('partials/head')%>
<%- include('partials/menuAdmin')%>

 
<div class="container" style="margin-top:30px; margin-bottom: 30px;">
  <div class="row justify-content-center">
    <div class="col-md-10">
        <h1> Actualizar producto</h1>
      <form method="POST"  action="/products/edit/<%=product.id%>"  enctype="multipart/form-data"  id="productoUpadateForm"> 
    
					<div class="row">

          
           

						<div class="col-md-6">
							<div class="form-group">
								<label><b>Nombre:</b></label>
                <input   type="text" name="nombre_product"   data-name="nombre producto" 
                class="form-control
                          <% if (typeof hasErrorGetMessage !== 'undefined') { %>
                            <%= hasErrorGetMessage('nombre_product', errors) ? 'is-invalid' : null %> 
                          <% } %>
                          "
                          value="<%= product.nombre_product%>">
                 <div class="invalid-feedback"> </div>
                 <i class="invalid-feedback">
                  <% if (typeof hasErrorGetMessage !== 'undefined') { %>
                    <%= hasErrorGetMessage('nombre_product', errors) ? hasErrorGetMessage('nombre_product', errors) : null %>
                  <% } %>
                </i>
								
							</div>
						</div>

						<div class="col-md-6">
							<div class="form-group">
								<label><b>Imagen de perfil:</b></label>
								<div class="custom-file">
									<input 
										type="file" 
                    name="foto"
                    data-name="foto" 
										class="custom-file-input
										<% if (typeof hasErrorGetMessage !== 'undefined') { %>
											<%= hasErrorGetMessage('foto', errors) ? 'is-invalid' : null %> 
										<% } %>
                                        "
                                        value="<%= product.foto%>"
									>
									<label class="custom-file-label">Choose file...</label>
									<i class="invalid-feedback">
										<% if (typeof hasErrorGetMessage !== 'undefined') { %>
										<%= hasErrorGetMessage('foto', errors) ? hasErrorGetMessage('foto', errors) : null %>
										<% } %>
									</i>
								</div>
							</div>
						</div>

  
            
            <div class="col-md-6">
							<div class="form-group">
								<label><b>Descripcion</b></label><br> 
								<input 
								data-name="descripcion"
								type="text" 
                name="descripcion"
                value="<%= product.descripcion%>"	>
							 
							</div>
            </div>

                    
            <div class="col-md-6">
							<div class="form-group">
								<label><b>Descripcion Larga</b></label><br> 
							  <input  
          type="text" 
          name="descripcion_larga"
          data-name="Descripcion Larga"
          class="form-control
          <% if (typeof hasErrorGetMessage !== 'undefined') { %>
            <%= hasErrorGetMessage('descripcion_larga', errors) ? 'is-invalid' : null %> 
          <% } %>
          "
          value="<%= product.descripcion_larga%>"	>
          <div class="invalid-feedback"> </div>
          <i class="invalid-feedback">
            <% if (typeof hasErrorGetMessage !== 'undefined') { %>
              <%= hasErrorGetMessage('descripcion_larga', errors) ? hasErrorGetMessage('descripcion_larga', errors) : null %>
            <% } %>
          </i>
							</div>
            </div>


            
						<div class="col-md-6">
							<div class="form-group">
								<label><b>Tama単o/Talle</b></label><br> 
								<input 
								data-name="tama単o"
								type="text" 
                name="tama単o"
                value="<%= product.tama単o%>"		>
							 
							</div>
						</div>

						<div class="col-md-6">
							<div class="form-group">
								<label><b>Color:</b></label><br> 
								<input 
								type="text" 
								name="color" 
                data-name="color"
                value="<%= typeof oldData !== 'undefined' ? oldData.color : null %>"	>
							 
							</div>
						</div>


						<div class="col-md-6">
							<div class="form-group">
								<label><b>Precio:</b></label><br> 
								<input 
								type="text" 
								name="precio" 
                data-name="precio"
                value="<%= product.precio%>"		>
							 
							</div>
						</div>

            <div class="col-md-6">
							<div class="form-group">
								<label><b>Stock:</b></label><br> 
								<input 
								type="text" 
								name="stock" 
                data-name="stock"
                value="<%= product.stock%>"		>
							 
							</div>
						</div>

						<div class="col-8">
              <button type="submit" class="btn btn-primary"  > Agregar</button>
            </div>
            
 

					</div>
				</form>
 
    	</div>
    </div>
  </div>



  <%- include('partials/footer')%>
  <script> src="js/bootstrap.js"</script>
  <script> src="js/jquery.js"</script>
  <script> src="js/popper.js"</script>
  <script src="../../js/validator.js"></script>
  <script src="../../js/validacionesProductoUpdate.js"></script>

