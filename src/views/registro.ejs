<%- include('partials/head')%>
<%- include('partials/menu')%>


 
    
   
<div class="container" style="margin-top:30px; margin-bottom: 30px;">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <h2>Formulario de registro</h2>
				<form method="POST" action="/user/registro" enctype="multipart/form-data">
					<div class="row">
						<div class="col-md-6">
							<div class="form-group">
								<label><b>Nombre completo:</b></label>
								<input 
									type="text" 
									name="fullname" 
									class="form-control
									<% if (typeof hasErrorGetMessage !== 'undefined') { %>
										<%= hasErrorGetMessage('fullname', errors) ? 'is-invalid' : null %> 
									<% } %>
									"
									value="<%= typeof oldData !== 'undefined' ? oldData.fullname : null %>"
								>
								<i class="invalid-feedback">
									<% if (typeof hasErrorGetMessage !== 'undefined') { %>
										<%= hasErrorGetMessage('fullname', errors) ? hasErrorGetMessage('fullname', errors) : null %>
									<% } %>
								</i>
							</div>
						</div>
						<div class="col-md-6">
							<div class="form-group">
								<label><b>Correo electrónico:</b></label>
								<input 
									type="text" 
									name="email" 
									class="form-control
									<% if (typeof hasErrorGetMessage !== 'undefined') { %>
										<%= hasErrorGetMessage('email', errors) ? 'is-invalid' : null %> 
									<% } %>
									"
									value="<%= typeof oldData !== 'undefined' ? oldData.email : null %>"
								>
								<i class="invalid-feedback">
									<% if (typeof hasErrorGetMessage !== 'undefined') { %>
									<%= hasErrorGetMessage('email', errors) ? hasErrorGetMessage('email', errors) : null %>
									<% } %>
								</i>
							</div>
						</div>
						<div class="col-md-6">
							<div class="form-group">
								<label><b>Password:</b></label>
								<input 
									type="password" 
									name="password" 
									class="form-control
									<% if (typeof hasErrorGetMessage !== 'undefined') { %>
										<%= hasErrorGetMessage('password', errors) ? 'is-invalid' : null %> 
									<% } %>
									"
								>
								<i class="invalid-feedback">
									<% if (typeof hasErrorGetMessage !== 'undefined') { %>
									<%= hasErrorGetMessage('password', errors) ? hasErrorGetMessage('password', errors) : null %>
									<% } %>
								</i>
							</div>
						</div>
						<div class="col-md-6">
							<div class="form-group">
								<label><b>Repetir Password:</b></label>
								<input 
									type="password" 
									name="rePassword" 
									class="form-control"
								>
							</div>
						</div>
						<div class="col-md-6">
							<div class="form-group">
								<label><b>Clase Usuario</b></label>
								<select 
									name="Categoria" 
									class="form-control"
								>
									<option value="">Elegí una categoria</option>
									<%  
										let categorias = [
											{code: 'Adm', name: 'Administrador'},
											{code: 'Vis', name: 'visita'},
										
										];
									%>
									<% for (const oneCat of categorias) { %>
										<option value="<%= oneCat.code %>"> 
											<%= oneCat.name %> 
										</option>
									<% } %>
								</select>
							</div>
						</div>
						<div class="col-md-6">
							<div class="form-group">
								<label><b>Imagen de perfil:</b></label>
								<div class="custom-file">
									<input 
										type="file" 
										name="avatar"
										class="custom-file-input
										<% if (typeof hasErrorGetMessage !== 'undefined') { %>
											<%= hasErrorGetMessage('avatar', errors) ? 'is-invalid' : null %> 
										<% } %>
										"
									>
									<label class="custom-file-label">Choose file...</label>
									<i class="invalid-feedback">
										<% if (typeof hasErrorGetMessage !== 'undefined') { %>
										<%= hasErrorGetMessage('avatar', errors) ? hasErrorGetMessage('avatar', errors) : null %>
										<% } %>
									</i>
								</div>
							</div>
						</div>
						<div class="col-12">
              <button type="submit" class="btn btn-primary"  style="margin-left: 200px; margin-right: 200px">
                Registrarse</button>
						</div>
					</div>
				</form>
 
    	</div>
    </div>
  </div>
  <%- include('partials/footer') %>
  <script> src="js/bootstrap.js"</script>
  <script> src="js/jquery.js"</script>
  <script> src="js/popper.js"</script>
</body>

</html>
