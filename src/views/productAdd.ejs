<%- include('partials/head')%>
<%- include('partials/menuAdmin')%>

<div class="cuerpoProductAdd container">
  <div>
    <form  class="row justify-content-around" action="/products/add/" method="POST">
      <div class="col-5">
        <label for="nombre_product">Nombre</label>
        <input class="abajo" type="text" name="nombre_product">
        <label for="idCategory">Tipo</label>
        <input class="abajo" type="text" name="idCategory">
        <label for="idMarca">Marca</label>
        <input class="abajo" type="text" name="idMarca">
        <label for="tamaño">Tamaño/Talle</label>
        <input class="abajo" type="text" name="tamaño">
        <label for="color">Color</label>
        <input class="abajo" type="text" name="color">
        <label for="precio">Precio</label>
        <input class="abajo" type="text" name="precio">
        <label for="stock">Stock</label>
        <input class="abajo" type="text" name="stock">
        <label for="descripcion">Descripción Corta</label>
        <input class="abajo" type="txt" name="descripcion">
      </div>
      <div class="col-6 row cargaBotones justify-content-around">
        <div class="col-6">
          <label  for="descripcion_larga">Descripción Larga</label>
          <input  type="text" name="descripcion_larga">
        </div>
        <div class="col-6">
          <label  for="foto">Cargar Foto</label>
          <input  type="file" name="foto">
        </div>
        <input class="col-3 botoncito" type="submit" value="Agregar">
        <input class="col-3 botoncito" type="submit" value="Actualizar">
        <input class="col-3 botoncito" type="reset" value="Borrar">
        <input class="col-4 botoncito" type="button" value="Cancelar">
      </div>
    </form>
  </div>
</div>



